<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuScreen.Solitunes.MusicList">


    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/melrose"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <FrameLayout
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:clickable="true"
            android:padding="15dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="50dp">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:indeterminate="true"
                        app:indicatorColor="@color/deluge" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:visibility="gone"
            tools:listitem="@layout/journalist_view" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/playing_controls"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        app:cardBackgroundColor="@color/melrose">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/sound_icon"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/music_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/nunito_sans"
                android:text="Meditation Music: Lofi"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/previous_song"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/previous_song"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/previous"
                app:layout_constraintStart_toEndOf="@+id/music_title"
                app:layout_constraintTop_toTopOf="@+id/music_title"
                app:layout_constraintBottom_toBottomOf="@+id/music_title" />

            <ImageView
                android:id="@+id/pause_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/play"
                app:layout_constraintStart_toEndOf="@+id/previous_song"
                app:layout_constraintTop_toTopOf="@+id/music_title"
                app:layout_constraintBottom_toBottomOf="@+id/music_title" />

            <ImageView
                android:id="@+id/next_song"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/next_button"
                android:layout_marginEnd="10dp"
                app:layout_constraintStart_toEndOf="@+id/pause_play"
                app:layout_constraintTop_toTopOf="@+id/music_title"
                app:layout_constraintBottom_toBottomOf="@+id/music_title"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>